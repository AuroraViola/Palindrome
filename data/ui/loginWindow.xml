<interface>
    <requires lib="gtk" version="4.0"/>
    <object class="AdwMessageDialog" id="loginWindow">
        <property name="heading">Welcome to Palindrome</property>
        <property name="body">Please login with you Subsonic instance information</property>
        <child>
            <object class="GtkBox">
                <property name="orientation">1</property>
                <child>
                    <object class="AdwClamp">
                        <property name="margin-top">20</property>
                        <property name="margin-bottom">20</property>
                        <property name="maximum-size">300</property>
                        <child>
                            <object class="GtkBox">
                                <property name="orientation">1</property>
                                <property name="spacing">5</property>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="halign">1</property>
                                        <property name="label">Hostname</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkEntry" id="url">
                                        <property name="placeholder-text">https://subsonic.example.com</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="halign">1</property>
                                        <property name="label">Username</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkEntry" id="username">
                                        <property name="placeholder-text">Enter username</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="halign">1</property>
                                        <property name="label">Password</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkPasswordEntry" id="password">
                                        <property name="show-peek-icon">true</property>
                                        <property name="placeholder-text">Enter password</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkLabel" id="error">
                                        <property name="label"></property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton" id="loginBtn">
                                        <property name="margin-top">24</property>
                                        <property name="label">Login</property>
                                        <property name="halign">2</property>
                                        <style>
                                            <class name="suggested-action"/>
                                        </style>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>
